<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileCodeChallenge.MainPage">
    <ContentPage.Content>
        <ListView x:Name="listView"
                  Header="Starships">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding name}" TextColor="Black" Detail="{Binding starship_class}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>